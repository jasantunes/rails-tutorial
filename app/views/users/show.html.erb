<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <b>Email:</b>       <%= @user.email %><br>
      <b>Created at:</b>  <%= @user.created_at %><br>
    </section>
  </aside>
</div>